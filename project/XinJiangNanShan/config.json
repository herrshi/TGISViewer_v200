{
  "theme": {
    "name": "BillboardTheme",
    "styles": [
      "default",
      "blue",
      "purple",
      "turquoise",
      "green",
      "orange",
      "red",
      "pink"
    ],
    "version": "2.4"
  },
  "map": {
    "3D": false,
    "2D": true,
    "position": {
      "left": 0,
      "top": 0,
      "right": 0,
      "bottom": 0
    },
    "basemaps": [
      {
        "label": "矢量图",
        "url": "http://{gisServer}/arcgis/rest/services/HROAD_BASEMAP/MapServer",
        "type": "dynamic",
        "visible": true
      }
    ],
    "operationallayers": [
      {
        "label": "道路养护",
        "url": "http://{gisServer}/arcgis/rest/services/HROAD_BASEMAP/MapServer/7",
        "type": "feature",
        "visible": true,
        "outFields": [
          "*"
        ],
        "renderer": {
          "type": "simple",
          "symbol": {
            "type": "esriSLS",
            "color": [0, 0, 255, 255],
            "width": 2
          }
        }
      }

    ],
    "mapOptions": {
      "logo": false,
      "nav": false,
      "slider": false
    }
  },
  "geometryService": "http://{gisServer}/arcgis/rest/services/Utilities/Geometry/GeometryServer",
  "gisServer": "172.30.30.1:6080",
  "widgetOnScreen": {
    "widgets": [
      {
        "uri": "widgets/Coordinate/Widget",
        "position": {
          "left": 15,
          "bottom": 5,
          "relativeTo": "map"
        },
        "version": "2.4",
        "id": "CoordinateWidget"
      },
      {
        "uri": "widgets/OverviewMap/Widget",
        "position": {
          "right": 0,
          "bottom": 0,
          "relativeTo": "map"
        },
        "version": "2.4",
        "id": "OverviewMapWidget"
      },
      {
        "uri": "widgets/TopToolbar/Widget",
        "name": "TopToolbar",
        "position": {
          "top": 10,
          "width": "100%",
          "left":0,
          "right":0
        },
        "id": "TopToolbarWidget"
      },
      {
        "uri": "widgets/BottomToolbar/Widget",
        "name": "BottomToolbar",
        "config": "configs/BottomToolbar/config_TianJinEco.json",
        "position": {
          "bottom": 10,
          "width": "100%",
          "left":0,
          "right":0
        },
        "id": "BottomToolbarWidget"
      },
      {
        "uri": "widgets/Draw/Widget",
        "version": "2.4",
        "name": "Draw",
        "config": "configs/Draw/config.json",
        "position": {
          "left": 15,
          "top": 190,
          "relativeTo": "map"
        },
        "id": "DrawWidget"
      },
      {
        "uri": "widgets/Print/Widget",
        "version": "2.4",
        "id": "PrintWidget"
      },
      {
        "uri": "widgets/Overlay/Widget",
        "version": "2.4",
        "id": "OverlayWidget"
      },
      {
        "uri": "widgets/DrawOverlay/Widget",
        "version": "2.4",
        "id": "DrawOverlayWidget"
      }
    ]
  }
}